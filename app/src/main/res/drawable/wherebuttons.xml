
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
<shape
    android:shape="rectangle">

    <solid android:color="#DDEAFF"/>
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <corners android:radius="10dp" />
</shape>
</item>
<item
    android:top="70dp"
    android:gravity="center"
    android:width="50dp"
    android:height="50dp">
    <shape
        android:shape="oval">
        <solid android:color="#FFFFFF"/>
    </shape>
</item>
</layer-list>