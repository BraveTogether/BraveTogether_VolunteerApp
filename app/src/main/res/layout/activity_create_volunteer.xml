                android:layout_marginStart="88dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/textfield_d_buttons"
                android:drawableEnd="@drawable/time_line"
                android:drawableRight="@drawable/time_line"
                android:padding="10dp"
                android:text="@string/pick_time"
                app:layout_constraintEnd_toStartOf="@+id/btnDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todoeDescrition" />

            <ImageView
                android:id="@+id/timeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:background="@drawable/ic_rectangle_72"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todoeDescrition" />

            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="202dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:background="#0000"
                android:elevation="1dp"
                android:textColor="#001925"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/timeView"
                app:layout_constraintStart_toStartOf="@+id/timeView"
                app:layout_constraintTop_toTopOf="@+id/timeView" />


            <TextView
                android:id="@+id/hourView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="153dp"
                android:background="#0000"
                android:elevation="1dp"
                android:textColor="#001925"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/timeView"
                app:layout_constraintStart_toStartOf="@+id/timeView"
                app:layout_constraintTop_toTopOf="@+id/timeView" />

            <TextView
                android:id="@+id/durationView"
                android:layout_width="wrap_content"
