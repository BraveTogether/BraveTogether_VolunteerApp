                android:elevation="1dp"
                android:textColor="#001925"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/volNumView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/volNumView"
                app:layout_constraintTop_toTopOf="@+id/volNumView" />

            <TextView
                android:id="@+id/maxVolView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="50dp"
                android:background="#0000"
                android:elevation="1dp"
                android:textColor="#001925"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/volNumView"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="@+id/volNumView"
                app:layout_constraintTop_toTopOf="@+id/volNumView" />


            <EditText
                android:id="@+id/valueInCoins"
                android:layout_width="204dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textfield_d"
                android:hint="מה השווי של ההתנדבות"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.797"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/volNumView"
                android:inputType="number"/>

            <ImageView
                android:id="@+id/sendToConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:onClick="sendToConfirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/valueInCoins"
                app:srcCompat="@drawable/ic_sendtoconfirm" />

            <ToggleButton
                android:id="@+id/online_button"
                android:layout_width="87dp"
                android:layout_height="39dp"
                android:layout_marginTop="4dp"
