<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="276dp"
    android:layout_height="212dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewshare"
            android:layout_width="277dp"
            android:layout_height="25dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/textviewDescription"
            android:textAlignment="gravity"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.163" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="39dp"
            android:layout_marginTop="187dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.166">

            <TextView
                android:id="@+id/textViewPlace"
                android:layout_width="62dp"
                android:layout_height="17dp"
                android:gravity="end"
                android:text="@string/textviewLocation"
                android:textAlignment="gravity"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_separator"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#cfcfcf" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="62dp"
                android:layout_height="17dp"
                android:gravity="end"
                android:text="@string/textviewLocation"
                android:textAlignment="gravity"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_separator_2"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#cfcfcf" />

            <TextView
                android:id="@+id/textViewHour"
                android:layout_width="62dp"
                android:layout_height="17dp"
                android:gravity="end"
                android:text="@string/textviewDate"
                android:textAlignment="gravity"
                android:textSize="14sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/buttonShareFacebook"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="228dp"
                android:layout_marginTop="113dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_share_facebook_event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageOfVolunteer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageOfVolunteer"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageOfVolunteer"
                android:layout_width="282dp"
                android:layout_height="142dp"
                android:contentDescription="@string/todo"
                android:cropToPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageViewCoins"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="121dp"
                android:layout_marginEnd="209dp"
                android:layout_marginBottom="18dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="@+id/imageOfVolunteer"
                app:layout_constraintEnd_toEndOf="@+id/imageOfVolunteer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageOfVolunteer"
                app:layout_constraintTop_toTopOf="@+id/imageOfVolunteer"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/credits_badge" />

            <TextView
                android:id="@+id/textViewCoinsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|fill_horizontal|center_vertical"
                android:text="@string/textviewDate"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCoins"
                app:layout_constraintEnd_toEndOf="@+id/imageViewCoins"
                app:layout_constraintStart_toStartOf="@+id/imageViewCoins"
                app:layout_constraintTop_toTopOf="@+id/imageViewCoins" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
