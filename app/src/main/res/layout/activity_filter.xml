<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">

    <TextView
        android:id="@+id/Sfilters"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="סינון חיפוש"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RadiusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="326dp"
        android:layout_marginLeft="326dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="רדיוס חיפוש התנדבות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sfilters" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="326dp"
        android:layout_marginLeft="326dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="משך התנדבות עד-"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/km_option10" />

    <Button
        android:id="@+id/m30"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/filter_buttons"
        android:onClick="duration"
        android:tag="30"
        android:text="30 דק'"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <Button
        android:id="@+id/h1"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/filter_buttons"
        android:onClick="duration"
        android:tag="60"
        android:text="1 שעה"
        app:layout_constraintEnd_toStartOf="@+id/m30"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <Button
        android:id="@+id/unlimited_time"
        android:layout_width="77dp"
        android:layout_height="25dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/filter_buttons"
        android:onClick="duration"
        android:tag="10000000"
        android:text="ללא הגבלה"
        app:layout_constraintEnd_toStartOf="@+id/h2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration" />

    <Button
        android:id="@+id/h2"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/filter_buttons"
        android:onClick="duration"
        android:tag="120"
        android:text="2 שעה"
        app:layout_constraintEnd_toStartOf="@+id/h1"
        app:layout_constraintStart_toEndOf="@+id/unlimited_time"
        app:layout_constraintTop_toBottomOf="@id/duration" />

    <TextView
        android:id="@+id/activity_hours"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="זמינות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m30" />

    <TextView
        android:id="@+id/nature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="326dp"
        android:layout_marginLeft="326dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="אופי ההתנדבות"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <TextView
        android:id="@+id/save"
        android:layout_width="342dp"
        android:layout_height="34dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:onClick="Save"
        android:text="שמור אופציה זו כברירת מחדל בחישובים עתידיים"
        app:layout_constraintBottom_toTopOf="@id/search"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/online"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/online"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/filter_buttons"
        android:tag="true"
        android:onClick="nature"
        android:text="להתנדב אונליין"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nature" />

    <Button
        android:id="@+id/inplace"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:background="@drawable/filter_buttons"
        android:text="להתנדב במקום"
        android:tag="false"
        android:onClick="nature"
        app:layout_constraintEnd_toStartOf="@+id/online"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nature" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/online" />

    <Button
        android:id="@+id/km_option10"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/filter_buttons"
        android:onClick="radius"
        android:tag="10"
        android:text='10 ק"מ'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RadiusText" />

    <Button
        android:id="@+id/km_option20"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/filter_buttons"
        android:onClick="radius"
        android:tag="20"
        android:text='20 ק"מ'
        app:layout_constraintEnd_toStartOf="@+id/km_option15"
        app:layout_constraintTop_toBottomOf="@id/RadiusText" />

    <Button
        android:id="@+id/km_option_unlimited"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/filter_buttons"
        android:onClick="radius"
        android:tag="100000"
        android:text="ללא הגבלה"
        app:layout_constraintEnd_toStartOf="@+id/km_option20"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadiusText" />

    <Button
        android:id="@+id/km_option15"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/filter_buttons"
        android:onClick="radius"
        android:tag="15"
        android:text='15 ק"מ'
        app:layout_constraintEnd_toStartOf="@+id/km_option10"
        app:layout_constraintTop_toBottomOf="@id/RadiusText" />

    <Button
        android:id="@+id/search"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="#00BCD4"
        android:onClick="Search"
        android:text="חפש התנדבות"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save" />

    <EditText
        android:id="@+id/from"
        android:layout_width="113dp"
        android:layout_height="39dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="14:30"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/until"
        app:layout_constraintTop_toBottomOf="@+id/activity_hours" />

    <EditText
        android:id="@+id/until"
        android:layout_width="113dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:gravity="center"
        android:hint="17:00"
        android:inputType="time"
        app:layout_constraintEnd_toStartOf="@+id/from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_hours" />

    <TextView
        android:id="@+id/untiltext"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="עד-"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/from"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/until"
        app:layout_constraintTop_toBottomOf="@+id/activity_hours" />

    <TextView
        android:id="@+id/fromtext2"
        android:layout_width="23dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="מ-"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/activity_hours" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="10dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/until" />

</androidx.constraintlayout.widget.ConstraintLayout>