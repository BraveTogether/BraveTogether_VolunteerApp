<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="206dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/ellipse_home_page"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    android:background="@drawable/ic_ellipse_home_page"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:targetApi="lollipop" />

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="122dp"
                    android:layout_marginBottom="159dp"
                    android:contentDescription="TODO"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_home_page"
                    app:layout_constraintEnd_toEndOf="@+id/ellipse_home_page"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_home_page"
                    app:layout_constraintVertical_bias="0.067"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="263dp"
                    android:layout_height="154dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="216dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/ellipse_home_page"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_home_page"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_home_page">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="68dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:text="TextView" />

                        <View
                            android:id="@+id/view_separator3"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="#cfcfcf" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:id="@+id/view_separator4"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="#cfcfcf" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="55dp"
                            android:layout_height="15dp"
                            android:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="235dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="68dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:text="TextView" />

                        <View
                            android:id="@+id/view_separator2"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="#cfcfcf" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:id="@+id/view_separator"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:background="#cfcfcf" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="55dp"
                            android:layout_height="15dp"
                            android:text="TextView" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="27dp"
                    android:elevation="1dp"
                    android:fontFamily="@font/rubik"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:padding="2dp">


                <TextView
                    android:id="@+id/TextViewClose"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"

                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="197dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="-3dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="התנדבויות קרובות"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recycler_view_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:padding="2dp">


                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="205dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"

                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="174dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="-3dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="היסטוריית התנדבויות"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recycler_view_list4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>